# cd
alias ..="cd .."
alias ../..="cd ../.."
alias ../../..="cd ../../.."
alias cdp="cd ~/Projects"

# ls
alias ls="ls --color=auto"
alias la="ls -la --color=auto"
alias l.='ls -d .* --color=auto'

# sudo / doas
alias fg="sudo !!"

# text editor
alias v="vim"
alias v.="vim ."

# Portage
alias semerge="emerge --search "
alias makeconf="sudo vim /etc/portage/make.conf"
alias updg="sudo emerge --sync; sudo emerge -uDNvat @world"

# Compiling
alias mk="./configure; make; sudo make install"

# Project testing
alias dh="dehashr -h"
alias dl="dehashr -l"

# Safety
alias rm\ -rf\ ~="false"
alias sudo\ rm\ -rf\ ~="false"
